%div.save_order
  = button_to "Save Order", update_feed_order_path, id: 'save_order_button'

%div#sortable
  - @feed_arr.each do |x|
    %div{id: "sortable-#{x[2]}-#{x[0]}"}
      %h1{id: "toggle-#{x[1].parameterize}" }
        = x[3]
        = link_to "Collapse", "#", id: "collapse-#{x[1].parameterize}"
      - if @feed[x[1]].respond_to?(:entries)
        %div{id: "content-#{x[1].parameterize}"}
          - @feed[x[1]].entries.each do |post|
            = link_to(post.title, post.url) + " - #{post.published.strftime('%B %d, %Y at %I:%M %P')}"
            = simple_format post.summary
      - else
        %h3
          This seems to be a bad feed.
          = link_to 'Remove?', feed_path(x[2]), method: :delete
